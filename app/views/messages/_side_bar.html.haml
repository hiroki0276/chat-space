.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icon
          = link_to new_group_path(current_user) do
            = icon('far', 'edit')
        %li.top-items__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')

  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
